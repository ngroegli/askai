# Shared Core Processing
core.pattern_select -> core.input_collect: "Pattern Definition"
core.input_collect -> core.msg_build: "Validated Inputs"
core.msg_build -> core.ai_process: "Formatted Messages"
core.ai_process -> external.openrouter: "HTTP Request"
external.openrouter -> output.content_extract: "AI Response"
